# Neural Sparse v22.1 Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# ===========================================
# Amazon OpenSearch Service Configuration
# ===========================================
# Uses AWS default credentials (boto3.Session().get_credentials())
# Authentication: AWS4Auth with IAM credentials
OPENSEARCH_HOST=your-domain.us-east-1.es.amazonaws.com
OPENSEARCH_PORT=443
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=true

# Index names for benchmark
OPENSEARCH_BM25_INDEX=benchmark-bm25
OPENSEARCH_DENSE_INDEX=benchmark-dense
OPENSEARCH_SPARSE_INDEX=benchmark-sparse

# ===========================================
# EMR Spark Configuration
# ===========================================
# To connect to EMR, run:
# aws ssm start-session --target $EMR_INSTANCE_ID \
#   --document-name AWS-StartPortForwardingSession \
#   --parameters '{"portNumber":["15002"],"localPortNumber":["15002"]}'
EMR_INSTANCE_ID=i-xxxxxxxxxxxxxxxxx
EMR_SPARK_PORT=15002

# ===========================================
# HuggingFace Configuration
# ===========================================
# Required for gated datasets (optional)
HF_TOKEN=your-huggingface-token
